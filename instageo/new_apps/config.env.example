# Application Stage
STAGE=dev

# RQ Dashboard Authentication (required for prod) - Ignore if in dev STAGE
RQ_DASHBOARD_USERNAME=admin
RQ_DASHBOARD_PASSWORD=change-this-password

# Redis Configuration
REDIS_HOST=instageo-redis
REDIS_PORT=6379
REDIS_DB=0

# Data and Models Configuration
DATA_FOLDER=/app/instageo-data
HOST_MODELS_PATH=/path/to/models
APP_MODELS_PATH=/app/models
MODELS_REGISTRY_GCS_URI="gs://path/to/models/registry.yaml"

# Worker Configuration
DATA_PROCESSING_WORKER_REPLICAS=2
MODEL_PREDICTION_WORKER_REPLICAS=2
VISUALIZATION_PREPARATION_WORKER_REPLICAS=1

# Earth Data Credentials
EARTHDATA_USERNAME=your-username
EARTHDATA_PASSWORD=your-password

# Test Configuration
TEST_FILEPATH=hls_raster_dataset.csv

# Frontend Configuration
REACT_APP_MIN_AREA_KM2=50
REACT_APP_MAX_AREA_KM2=500

# Domain name (required for prod) - Ignore if in dev STAGE
DOMAIN_NAME=your-domain.com

# Cloudflare
CLOUDFLARE_TUNNEL_NAME=""
CLOUDFLARE_TUNNEL_CREDS='' # Obtained after running cloudflared tunnel create $CLOUDFLARE_TUNNEL_NAME.
                           # You can use the credentials generated from another machine
