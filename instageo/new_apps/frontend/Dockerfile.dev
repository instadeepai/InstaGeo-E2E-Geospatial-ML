# Development Dockerfile for React frontend with hot reloading
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Set environment variables
ARG REACT_APP_INSTAGEO_BACKEND_API_BASE_URL
ENV REACT_APP_INSTAGEO_BACKEND_API_BASE_URL=$REACT_APP_INSTAGEO_BACKEND_API_BASE_URL
ARG REACT_APP_ENV
ENV REACT_APP_ENV=$REACT_APP_ENV
ARG REACT_APP_MIN_AREA_KM2
ENV REACT_APP_MIN_AREA_KM2=$REACT_APP_MIN_AREA_KM2
ARG REACT_APP_MAX_AREA_KM2
ENV REACT_APP_MAX_AREA_KM2=$REACT_APP_MAX_AREA_KM2

# Expose port 3000
EXPOSE 3000

# Start development server with hot reloading
CMD ["npm", "start"]
